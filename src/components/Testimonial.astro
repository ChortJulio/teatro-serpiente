---
interface Testimonial {
  image: string;
  name: string;
  age: number;
  comment: string;
}

const testimonial: Testimonial = Astro.props.testimonial;
---

<article class="border border-gray-300 p-4 pt-8 px-6 m-4 rounded-lg">
  <section class="flex items-center mb-4">
    <img
      src={testimonial.image}
      alt={testimonial.name}
      class="rounded-full w-12 h-w-12 object-cover"
    />

    <div class="ml-4">
      <h4 class="text-lg font-bold mt-2 text-white">
        {testimonial.name}
      </h4>
      <p class="text-gray-500 text-center">{testimonial.age} a√±os</p>
    </div>
  </section>
  <p class="text-white">"{testimonial.comment}"</p>
</article>
