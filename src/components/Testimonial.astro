---
interface Testimonial {
  image: string;
  name: string;
  age: number;
  comment: string;
}

const testimonial: Testimonial = Astro.props.testimonial;
---

<article class="border border-gray-300 p-4 pt-8 px-6 m-4 rounded-lg w-64">
  <img
    src={testimonial.image}
    alt={testimonial.name}
    class="rounded-full w-20 h-w-20 object-cover"
  />
  <div class="text-lg font-bold mt-2 text-white">
    {testimonial.name}
  </div>
