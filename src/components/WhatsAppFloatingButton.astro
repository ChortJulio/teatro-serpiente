---
import WhatsApp from "@icons/WhatsApp.astro";
import CONTACT_INFO from "@data/contactInfo";
---

<a
  href={`https://wa.me/${CONTACT_INFO.contact.whatsappNumber}`}
  class="whatsapp-float transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-125"
  target="_blank"
  rel="noopener noreferrer"
>
  <WhatsApp />
</a>

<style scoped>
  .whatsapp-float {
    position: fixed;
    width: 30px;
    height: 30px;
    bottom: 40px;
    right: 40px;
    border-radius: 50px;
    text-align: center;
    z-index: 100;
  }
  .whatsapp-float img {
    width: 100%;
    height: auto;
  }
</style>
