<div id="contact-form">
  <section class="pt-32">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 text-center">
      <h1
        class="text-4xl font-semibold text-center text-wrap mx-auto mb-2 tracking-wide uppercase"
      >
        Contactanos
      </h1>
      <div class="grid grid-cols-1 gap-x-16 gap-y-8 lg:grid-cols-5">
        <div
          class="rounded-lg bg-black/60 p-8 shadow-lg lg:col-span-3 lg:p-12 lg:col-start-2"
        >
          <form action="#" class="space-y-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
              <div class="sm:col-span-2">
                <label class="sr-only" for="name">Nombre y apellido</label>
                <input
                  class="w-full rounded-lg p-3 bg-white focus:text-black text-black/70"
                  placeholder="Nombre y apellido *"
                  type="text"
                  id="name"
                  required
                />
              </div>
              <div>
                <label class="sr-only" for="age">Edad</label>
                <input
                  class="w-full rounded-lg p-3 bg-white focus:text-black text-black/70"
                  placeholder="Edad *"
                  type="number"
                  id="age"
                  required
                />
              </div>
            </div>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <label class="sr-only" for="email">Correo electrónico</label>
                <input
                  class="w-full rounded-lg p-3 bg-white focus:text-black text-black/70"
                  placeholder="Correo electrónico *"
                  type="email"
                  id="email"
                  required
                />
              </div>

              <div>
                <label class="sr-only" for="phone">Número de teléfono</label>
                <input
                  class="w-full rounded-lg p-3 bg-white focus:text-black text-black/70"
                  placeholder="Número de teléfono *"
                  type="tel"
                  id="phone"
                  required
                />
              </div>
            </div>

            <div>
              <label class="sr-only" for="experience"
                >¿Realizaste teatro anteriormente o sería tu primera vez?</label
              >
              <input
                class="w-full rounded-lg p-3 bg-white focus:text-black text-black/70"
                placeholder="¿Realizaste teatro anteriormente o sería tu primera vez? *"
                type="text"
                id="experience"
                required
              />
            </div>

            <div>
              <label class="sr-only" for="message">Mensaje</label>

              <textarea
                class="w-full rounded-lg p-3 bg-white focus:text-black text-black/70"
                placeholder="Mensaje (opcional)"
                rows="8"
                id="message"></textarea>
            </div>

            <div class="mt-4">
              <button
                type="submit"
                class="inline-block w-full rounded-lg px-5 py-3 sm:w-auto bg-yellow_primary/80 hover:bg-yellow_primary text-black hover:scale-110 transition-all duration-500"
              >
                Enviar consulta
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
